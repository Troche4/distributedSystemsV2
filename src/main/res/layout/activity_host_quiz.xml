<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostQuiz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like to load or make a quiz?"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/hostTextView"/>

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load a Quiz"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hostTextView"/>

    <Button
        android:id="@+id/makeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a Quiz"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loadButton"/>

</RelativeLayout
   >